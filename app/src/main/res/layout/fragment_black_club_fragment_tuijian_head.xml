<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="247dp"
    android:background="#FFFFFF">

    <android.support.v4.view.ViewPager
        android:paddingTop="4dp"
        android:id="@+id/head_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="200dp">
    </android.support.v4.view.ViewPager>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="沈阳"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/head_viewpager"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11℃"
        android:textSize="12sp"
        android:layout_toRightOf="@id/name"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/name"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="雾"
        android:textSize="12sp"
        android:layout_toRightOf="@id/temperature"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/name"/>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_toRightOf="@id/text"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/name"
        android:src="@drawable/sj"/>

    <TextView
        android:id="@+id/now_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:text="2017-10-16 Monday"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:id="@+id/pointgroup_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_above="@id/name"
        android:padding="8dp">
    </LinearLayout>



    <ImageView
        android:id="@+id/user_upimg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/logo_username"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/pointgroup_2"
        android:layout_alignParentEnd="true"
        />


    <TextView
            android:id="@+id/user_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="半步天涯"
            android:layout_toLeftOf="@id/user_upimg"
            android:layout_alignBottom="@id/name"
            />





</RelativeLayout>